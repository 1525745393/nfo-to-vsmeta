{
  "scan_root": "./JAV_output",                # 扫描视频根目录 # 建议设为你的主整理路径 # 错误路径将导致视频无法被识别
  "output_vsmeta_dir": "",                    # vsmeta 输出目录 # 空字符串代表与视频文件同目录 # 建议设置独立输出路径可提升群晖硬盘寿命
  "thread_count": 4,                          # 并发线程数 # 建议设置为 4～8，视 NAS 性能调整 # 过高可能导致资源耗尽
  "skip_existing": true,                      # 是否跳过已有 vsmeta 文件 # true 表示跳过已有文件 # false 表示强制覆盖
  "rename_video": false,                      # 是否启用视频文件重命名 # 默认 false 保持文件名不变 # 改为 true 将按模板重命名
  "rename_keep_original": true,               # 是否保留重命名前的原文件副本 # true 为保留副本 # false 将直接覆盖原名，建议慎用
  "rename_skip_well_named": true,             # 跳过已规范命名的视频 # true 为跳过，false 为强制全部重命名
  "log_dir": "./logs",                        # 日志输出目录 # 建议指定一个单独日志目录便于查看和清理
  "nfo_dir": "",                              # 预留字段 # 未来支持 nfo -> vsmeta 转换时使用
  "python_path": ""                           # Python 路径 # 空表示自动识别，也可手动设为 "/usr/local/bin/python3"
}